@{
    var userName = string.Empty;
    if (CurrentUser != null)
    {
        userName = CurrentUser.FirstName + " " + CurrentUser.LastName;
    }
}
<header class="main-header">
    <!-- Logo -->
    <a href="@(SiteKeys.Domain+"admin/home/index")" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>E</b>PT</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><img src="~/Images/MainImage/" alt="logo" style="width: 210px"></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Areas/Admin/Content/images/defaultUser.jpg" height="20" width="20" class="img-circle" alt="User Image">

                        <span class="hidden-xs">@userName</span>

                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/Areas/Admin/Content/images/defaultUser.jpg" height="20" width="20" class="img-circle" alt="User Image">
                            <p>
                                @userName
                                <small>
                                    Member since
                                    @if (CurrentUser != null)
                                    {
                                        @CurrentUser.CreatedDate
                                    }
                                </small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a id="btnAdminUpdatePassword" data-toggle="modal" data-target="#change-password-modal" href="@Url.Action("ChangePassword","Account")" class="btn btn-default btn-flat">Change Password</a>
                            </div>
                            <div class="pull-right">
                                <a href="@Url.Action("Logout", "Account")" id="admsignot" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>

            </ul>
        </div>
    </nav>
</header>

@Html.Partial("_Modal", new Modal { ID = "change-password-modal", AreaLabeledId = "change-password-modal-label", Size = ModalSize.Medium })




