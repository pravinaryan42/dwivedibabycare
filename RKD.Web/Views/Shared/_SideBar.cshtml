@{
    var userName = string.Empty;
    if (CurrentUser != null)
    {
        userName = CurrentUser.FirstName + " " + CurrentUser.LastName;
    }
    var currentUrl = Request.Url.AbsoluteUri.ToLower().Split('/')[Request.Url.AbsoluteUri.ToLower().Split('/').Length - 1];


}
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Areas/Admin/Content/images/defaultUser.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@userName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online </a>
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li id="home" class="dashboard">
                <a href="@Url.Action("index", "home", new { area = "admin" })">
                    <i class="fa fa-desktop"></i> <span>Dashboard</span>
                </a>
            </li>

            <li id="ManageProfile" class="ManageProfile">
                <a href="@Url.Action("ProfileIndex", "ManageProfile", new { area = "admin" })">
                    <i class="fa fa-address-card"></i> <span>My Profile</span>
                </a>

            </li>


            <li id="UserTab" class="tabcontainer treeview @((currentUrl.Equals("doctor") || currentUrl.Equals("manager")|| currentUrl.Equals("secretary") || currentUrl.Equals("patient"))?"active":"")">
                <a href="javascript:void(0)">
                    <i class="fa fa-users"></i> <span>System Users</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">

                    <li id="managetitle"><a href="@Url.Action("index","managetitle",new { area="Admin"})"><i class="fa fa-user-md"></i>Titles</a></li>


                    <li id="doctor"><a href="@Url.Action("index","doctor",new { area="Admin"})"><i class="fa fa-user-md"></i>Doctors</a></li>


                    <li id="secretary"><a href="@Url.Action("index","secretary",new { area="Admin"})"><i class="fa fa-user-secret"></i>Staff</a></li>


                    <li id="patient"><a href="@Url.Action("index","patient",new { area="Admin"})"><i class="fa fa-user"></i>Users</a></li>

                </ul>
            </li>

        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/js/InnerJs/side-bar.js?v=@(SiteKeys.VersionKey)"></script>