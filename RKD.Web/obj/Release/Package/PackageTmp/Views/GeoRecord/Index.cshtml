@model RKD.DTO.SelectionModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@section styles{
    <link href="~/Content/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-switch.css" rel="stylesheet" />
    <link href="~/Content/alertify/alertify.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/3.1.1/css/buttons.bootstrap4.css" rel="stylesheet" />

}
<style>
    .hidden {
        display: none;
    }
</style>
<div class="col-sm-12">
    <div> @Html.Partial("_MessageNotification")</div>
</div>
<div class="row mb-2">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    Geo Records
                    <a style="float:right" title="Upload New File" id="addEditbrandModal" data-toggle="modal" href="@Url.Action("ImportRecord","GeoRecord")" data-target="#modal-import-record" class="btn btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                    <a style="float: right; margin-right: 10px;" id="btnExporttoexcel" class="btn btn-primary">
                        <i class="fa fa-file-excel-o"></i>
                    </a>
                </h5>
                <div class="row">
                    <div class="col-md-6 col-lg-3">
                        <div class="form-group">
                            <label>Select Block</label>
                            @Html.DropDownListFor(model => model.SelectedBlock, Model.BlockDataList, "All", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                </div>

                <div class="table-responsive" style="overflow-x:scroll">
                    <table id="grid-records" class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>FID</th>
                                <th width="2%">#</th>
                                <th>DISTRICT</th>
                                <th>BLOCK</th>
                                <th>GP</th>
                                <th>VILLAGE</th>
                                <th>HABITATION</th>
                                <th>LATITUDE</th>
                                <th>LONGITUDE</th>
                                <th>PROPERTYID</th>
                                <th>PROPERTYTYPE</th>
                                <th>NUMBEROFFLOORS</th>
                                <th>CONSTRUCTIONTYPE</th>
                                <th>CONSUMERNAME</th>
                                <th>PHONENO</th>
                                <th>FAMILYCOUNT</th>
                                <th>WATERSUPPLYTYPE</th>
                                <th>SUPPLYINHOURS</th>
                                <th>NUMBEROFCONNECTIONS</th>
                                <th>REMARKS</th>
                                <th>STATUS</th>
                                <th>SURVEYORLOCATION</th>
                                <th>USERNAME</th>
                                <th>NUMBEROFROOM</th>


                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@Html.Partial("_Modal", new Modal { ID = "modal-delete-record", AreaLabeledId = "modal-delete-record-label", Size = ModalSize.Medium })
@Html.Partial("_Modal", new Modal { ID = "modal-import-record", AreaLabeledId = "modal-import-record-label", Size = ModalSize.Medium })



@section scripts{
    <script src="~/Scripts/bootstrap-switch.js"></script>
    <script src="~/Scripts/alertify/alertify.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.print.min.js"></script>
    <script src="~/Scripts/CustomJs/georecord-index.js"></script>
}

